<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.call-recorder</string>

    <key>ProgramArguments</key>
    <array>
        <string>__HOME__/call-recorder/.venv/bin/python3</string>
        <string>-m</string>
        <string>src.daemon</string>
    </array>

    <key>WorkingDirectory</key>
    <string>__HOME__/call-recorder</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>

    <key>ThrottleInterval</key>
    <integer>10</integer>

    <key>StandardOutPath</key>
    <string>/tmp/call-recorder.stdout</string>

    <key>StandardErrorPath</key>
    <string>/tmp/call-recorder.stderr</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>__HOME__/.local/bin:/opt/homebrew/bin:/opt/homebrew/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
        <key>HOME</key>
        <string>__HOME__</string>
        <key>PYTHONPATH</key>
        <string>__HOME__/call-recorder</string>
    </dict>
</dict>
</plist>
